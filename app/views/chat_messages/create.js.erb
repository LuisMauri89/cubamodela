<% if @chat_message.errors.any? %>
	$('#notification-messages-container').html("<%= j render 'shared/errors', entity: @chat_message %>");
<% else %>
	$('#new-conversation-form-container').empty();
	$('.btn-new-conversation').show();
	$('#inner-chat-container').prepend("<%= j render 'new_conversation', chat: @chat_message  %>");
	$('#notification-messages-container').html("<%= j render 'shared/action_info', message: 'views.chat_messages.messages.create_conversation' %>");
<% end %>