<div class="row" style="padding-left: 20px;">
    <div class="col-md-12" style="padding:60px 10px;">
      <div id="new-account-form-container" class="container-center-horizontal-medium-small-top">
        <h2 class="text-center"><%= t('views.devise.unlocks.header_text') %></h2>

        <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>

          <% if resource.errors.any? %>
            <div class="alert alert-danger text-center">
              The form contains <%= pluralize(resource.errors.count, "error") %>.
              <ul>
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row">
            <div class="col-md-offset-2 col-md-8">
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, class: "form-control" %>
              </div>

              <%= f.submit t('views.devise.unlocks.buttons.send_inst'), class: "btn btn-primary btn-block btn-lg" %>
              <br />

              <div class="row">
              	<div class="col-md-6">
              		<%= link_to t('forms.buttons.log_in'), new_session_path(resource_name), class: "btn btn-primary btn-block" %>
              	</div>
              	<div class="col-md-6">
              		<%= link_to t('forms.buttons.log_up'), new_registration_path(resource_name), class: "btn btn-primary btn-block" %><br />
              	</div>
              </div>
              <div class="row">
              	<div class="col-md-6">
              		<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
		            	<%= link_to t('forms.buttons.recover'), new_password_path(resource_name), class: "btn btn-primary btn-block" %>
		            <% end -%>
              	</div>
              	<div class="col-md-6">
		            <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
					  	<%= link_to t('forms.buttons.confirmation_instruction'), new_confirmation_path(resource_name), class: "btn btn-primary btn-block" %><br />
					<% end -%>
              	</div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>
