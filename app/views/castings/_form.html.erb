<div id="form-casting-container">
  <%= form_for(@casting, html: { class: "form-horizontal" }) do |f| %>

    <% if @casting.errors.any? %>
      <div class="alert alert-danger text-center">
        The form contains <%= pluralize(@casting.errors.count, "error") %>.
        <ul>
        <% @casting.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group text-center">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "Title", class: "form-control text-center" %>
    </div>

    <div class="form-group text-center">
      <%= f.label :description %>
      <%= f.text_area :description, size: "60x5", placeholder: "Description", class: "form-control text-center" %>
    </div>

    <div class="form-group text-center">
      <%= f.label :location %>
      <%= f.text_area :location, size: "60x4", placeholder: "Location", class: "form-control text-center" %>
    </div>

    <div class="row">
      <div class="col-md-4">
        <div class="form-group text-center">
          <%= f.label :expiration_date %> <br/>
          <%= date_select :casting, :expiration_date, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group text-center">
          <%= f.label :casting_date %> <br/>
          <%= date_select :casting, :casting_date, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group text-center">
          <%= f.label :shooting_date %> <br/>
          <%= date_select :casting, :shooting_date, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group text-center">
      <%= f.label t('activerecord.attributes.profile_model.associations.modalities') << ":" %><br />
      <div class="row">
      <% if I18n.locale == "en".to_sym %>
        <%= f.collection_check_boxes :modality_ids, Modality.all, :id, :name_en do |e| %>
          <div class="col-md-3">
            <div class="checkbox-container">
              <%= e.check_box %>
              <%= e.label %>
            </div>
          </div>
        <% end %>
      <% else %>
        <%= f.collection_check_boxes :modality_ids, Modality.all, :id, :name_es do |e| %>
          <div class="col-md-3">
            <div class="checkbox-container">
              <%= e.check_box %>
              <%= e.label %>
            </div>
          </div>
        <% end %>
      <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :access_type %><br />
      <%= f.select(:access_type, Casting.access_types.keys.map {|type| [t('activerecord.attributes.user.kind_options.' + type), type]}, class: "form-control") %>
    </div>

    <%= f.submit "Save Casting", class: "btn btn-primary btn-block" %>
  <% end %>
</div>