<% @models.each do |model| %>
	<div id="model-<%= @casting.id %>-<%= model.id %>" class="img-thumbnail list-photo-item img-wrapper">
		<div>
			<%= link_to(show_resume_profile_model_path(model, from: "manage-casting"), remote: true, class: "link-image") do %>
				<%= image_tag model.get_profile_picture_url(:medium), alt: "Model Photo", class: "img-responsive" %>
			<% end %>
		</div>
		<div class="text-center" style="margin-top: 5px;">
			<%= link_to t('views.castings.buttons.invite'), invite_casting_path(@casting, model, list_item: "invite"), remote: true, class: "btn btn-primary btn-xs btn-block" %>
		</div>
		<div class="profile-status">
			<% if model.new_face? %>
				<% if model.premium? %>
					<%= image_tag "cubamodela_label_new_face_premium_cuba_models.png", height: 40, width: 40, class: "img-inline", alt: "New face", title: t('views.profile_models.index.tooltips.new_face'), data:{ toggle: "tooltip", placement: "bottom" } %>
				<% else %>
					<%= image_tag "cubamodela_label_new_face_cuba_models.png", height: 40, width: 40, class: "img-inline", alt: "New face", title: t('views.profile_models.index.tooltips.new_face'), data:{ toggle: "tooltip", placement: "bottom" } %>
				<% end %>
			<% else %>
				<% if model.premium? %>
					<%= image_tag "cubamodela_label_professional_model_premium_cuba_models.png", height: 40, width: 40, class: "img-inline", alt: "Professional model", title: t('views.profile_models.index.tooltips.professional_model'), data:{ toggle: "tooltip", placement: "bottom" } %>
				<% else %>
					<%= image_tag "cubamodela_label_professional_model_cuba_models.png", height: 40, width: 40, class: "img-inline", alt: "Professional model", title: t('views.profile_models.index.tooltips.professional_model'), data:{ toggle: "tooltip", placement: "bottom" } %>
				<% end %>
			<% end %>
		</div>
	</div>
<% end %>