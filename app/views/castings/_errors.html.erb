<% if @casting.errors.any? %>
  <div class="alert alert-danger alert-messages-box text-center">
    <%= t('forms.errors.header_text') %> <%= t('forms.errors.count', count: @casting.errors.count) %>.
    <ul>
    <% @casting.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>