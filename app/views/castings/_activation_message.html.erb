<div class="alert alert-success alert-dismissible alert-messages-box" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">
      &times;
    </span>
  </button>
  <%= t('views.castings.edit.active_successfully') %> <%= link_to "here", edit_casting_path(@casting) %>.
  <br/>
  <p><%= t('activerecord.attributes.casting.expiration_date') %>: <%= l(@casting.expiration_date, format: :custom) %> [ <%= distance_of_time_in_words(Date.today, @casting.expiration_date) << t('datetime.distance_in_words.after_text') %> ]</p>
  <br/>
  <p><%= t('activerecord.attributes.casting.casting_date') %>: <%= l(@casting.casting_date, format: :custom) %> [ <%= distance_of_time_in_words(Date.today, @casting.casting_date) << t('datetime.distance_in_words.after_text') %> ]</p>
  <br/>
  <p><%= t('activerecord.attributes.casting.shooting_date') %>: <%= l(@casting.shooting_date, format: :custom) %> [ <%= distance_of_time_in_words(Date.today, @casting.shooting_date) << t('datetime.distance_in_words.after_text') %> ]</p>
  <br/>
</div>