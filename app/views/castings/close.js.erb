<% if @casting.errors.any? %>
	$('#notification-messages-container').html("<%= j render 'errors' %>");
<% else %>
	$('#notification-messages-container').html("<%= j render 'action_info', text: 'Closed succesfully' %>");
	$('#actions-container').empty();
	$('#actions-container').html("<%= j render 'actions_container' %>");
<% end %>