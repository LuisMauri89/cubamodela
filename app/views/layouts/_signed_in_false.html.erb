<% if devise_controller? %>
	<div id="navbar-signed-in-settings-container" class="navbar-right">
		<% if controller_name != "sessions" %>
			<%= link_to "Log in", new_session_path(resource_name), class: "btn btn-primary btn-sm navbar-btn" %>
		<% end %>
		<% if controller_name != "registrations" %>
			<%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-primary btn-sm navbar-btn" %>
		<% end %>
		<% if controller_name != "passwords" %>
			<%= link_to "Recover", new_password_path(resource_name), class: "btn btn-primary btn-sm navbar-btn" %>
		<% end %>
		<%= render 'layouts/locales_options' %>
	</div>
<% else %>
	<div id="navbar-signed-in-settings-container" class="navbar-right">
		<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "navbar-form" }) do |f| %>
			<div class="form-group">
				<%= f.email_field :email, autofocus: true, placeholder: t('activerecord.attributes.user.email'), class: "form-control", style: "width: 180px;" %>
				<%= f.password_field :password, autocomplete: "off", placeholder: t('activerecord.attributes.user.password'), class: "form-control", style: "width: 170px;" %>
				<% if devise_mapping.rememberable? -%>
					  	<div class="checkbox">
					      	<%= f.check_box :remember_me %>
					      	<%= f.label :remember_me, t('forms.remember_me') %>
					    </div>
					<% end -%>
			</div>
			<%= f.submit t('forms.buttons.log_in'), class: "btn btn-primary" %>
			<%= render 'layouts/locales_options' %>
		<% end %>
	</div>
<% end %>