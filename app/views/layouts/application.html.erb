<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

    <%= display_meta_tags %>

    <%= render 'application/favicon' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div id="main-container" class="container-fluid">

      <div class="row">
        <div id="navbar-container" class="col-md-12 col-xs-12">
          <%= render 'layouts/application_navbar' %>
        </div>
      </div>

      <div id="spinner-container">
        <div class="spinner">
          <div class="rect1"></div>
          <div class="rect2"></div>
          <div class="rect3"></div>
          <div class="rect4"></div>
          <div class="rect5"></div>
        </div>
      </div>

      <div class="row">
        <div id="flash-messages-container" class="col-md-12 col-xs-12">
          <%= render 'layouts/flash_messages' %>
        </div>
      </div>

      <div class="row">
        <div id="yield-container" class="col-md-12 col-xs-12">
          <%= yield %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12 col-xs-12">
          <%= render 'layouts/footer' %>
        </div>
      </div>
    </div>
    
    <div id="notification-messages-container" class="text-center"></div>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
