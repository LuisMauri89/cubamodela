<% flash.each do |key, value| %>
	<div class="alert alert-<%= get_bootstrap_key_from_devise_key(key) %> alert-dismissible alert-messages-box text-center" role="alert">
	  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	    <span aria-hidden="true">
	      &times;
	    </span>
	  </button>
	  <%= value %>
	</div>
<% end %>