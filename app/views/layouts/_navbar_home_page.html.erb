	<div class="container-fluid">
		<div class="navbar-header">
			<%= link_to root_path, class: "navbar-brand" do %>
				<%= image_tag "logo_navbar.gif", size:"64x30", alt: "Logo" %>
			<% end %>
		</div>

		<ul class="nav navbar-nav">
