<div id="footer">
	<div class="row row-no-space">
		<div id="footer-logo-container" class="col-md-3 col-xs-2">
			<%= link_to root_path do %>
				<%= image_tag "cubamodela_logo_white.png", width:"250", alt: "Logo" %>
			<% end %>
		</div>
		<div class="col-md-2 col-xs-2">
			<ul class="list-unstyled">
				<li><%= link_to t('views.footer.link_models_text'), profile_models_path %></li>
				<li><%= link_to t('views.footer.link_photographers_text'), profile_photographers_path %></li>
				<li><%= link_to t('views.footer.link_castings_text'), castings_path %></li>
				<li><%= link_to t('views.footer.link_registration_text'), new_registration_path(resource_name) %></li>
