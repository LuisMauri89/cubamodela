<div class="form-wrapper-large">
  

  <%= form_for(color, html: { class: "form-horizontal" }) do |f| %>

    <% if color.errors.any? %>
      <div class="alert alert-danger text-center">
        <%= t('forms.errors.header_text') %> <%= t('forms.errors.count', count: color.errors.count) %>.
        <ul>
        <% color.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group text-center">
      <%= f.label :name_en %>
      <%= f.text_field :name_en, placeholder: t('activerecord.attributes.color.name_en'), class: "form-control" %>
    </div>

    <div class="form-group text-center">
      <%= f.label :name_es %>
      <%= f.text_field :name_es, placeholder: t('activerecord.attributes.color.name_es'), class: "form-control" %>
    </div>

    <%= f.submit t('forms.buttons.save'), class: "btn btn-primary btn-block" %>
  <% end %>

</div>
