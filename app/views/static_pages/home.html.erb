<div class="row">
    <div class="col-md-12">
        <div id="home-line-users-amounts-container">
            <div class="row text-center">
                <div class="col-md-4">
                    <h2><%= t('views.static_pages.home.models_text').upcase %>  <span class="home-line-users-count"><%= get_models_count %></span></h2>
                </div>
                <div class="col-md-4">
                    <h2><%= t('views.static_pages.home.photographers_text').upcase %>  <span class="home-line-users-count"><%= get_photographers_count %></span></h2>
                </div>
                <div class="col-md-4">
                    <h2><%= t('views.static_pages.home.places_text').upcase %>  <span class="home-line-users-count">125</span></h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row row-no-space">
    <div class="col-md-12 cell-no-space">
        <div id="models-container" class="notify">
            <div id="models-footer" class="text-center">
              <%= link_to "SEE MORE...", profile_models_path, class: "btn btn-primary btn-lg", data:{ animation: "animated fadeInUpBig", delay: "0.5s" } %>
            </div>
        </div>
    </div>
</div>

<div class="row row-no-space">
    <div class="col-md-12 cell-no-space">
        <div id="photographers-container" class="notify">
            <h1 id="photographers-header" class="text-center"><%= t('views.static_pages.home.photographers_text').upcase %></h1>
            <div class="row row-no-space text-center" data-animation="animated fadeIn" data-delay="0.5s">
              <div class="col-md-3 cell-no-space">
                <div data-animation="animated bounceInDown" data-delay="1s">
                  <%= image_tag "home_page_section_photographers_photo_vertical_1.gif", class: "img-responsive", alt: "Photo" %>
                </div>
              </div>
              <div class="col-md-3 cell-no-space">
                <div data-animation="animated bounceInDown" data-delay="1.5s">
                  <%= image_tag "home_page_section_photographers_photo_vertical_2.gif", class: "img-responsive", alt: "Photo" %>
                </div>
              </div>
              <div class="col-md-3 cell-no-space">
                <div data-animation="animated bounceInDown" data-delay="2s">
                  <%= image_tag "home_page_section_photographers_photo_vertical_3.jpg", class: "img-responsive", alt: "Photo" %>
                </div>
              </div>
              <div class="col-md-3 cell-no-space">
                <div data-animation="animated bounceInDown" data-delay="2.5s">
                  <%= image_tag "home_page_section_photographers_photo_vertical_4.gif", class: "img-responsive", alt: "Photo" %>
                </div>
              </div>
            </div>
            <%= link_to "SEE MORE...", profile_photographers_path, class: "btn btn-primary btn-lg", data:{ animation: "animated fadeInUpBig", delay: "3s" } %>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div id="cuba-container" class="notify">
            <h1 id="cuba-header" class="text-center"><%= t('views.static_pages.home.sections.discover.header') %></h1>
            <div class="row row-no-space">
              <div class="col-md-6 cell-no-space">
                <div>
                  <%= image_tag "5.JPG", class: "img-responsive img-thumbnail img-center-horizontal", alt: "Services", data:{ animation: "animated bounceInLeft", delay: "1s" } %>   
                </div>
              </div>
              <div class="col-md-6 cell-no-space">
                <div>
                  <%= image_tag "5.JPG", class: "img-responsive img-thumbnail img-center-horizontal", alt: "Services", data:{ animation: "animated bounceInRight", delay: "1s" } %>
                </div>
              </div>
            </div>
            <div id="cuba-footer" class="text-center">
              <%= link_to "DISCOVER MORE...", "#", class: "btn btn-primary btn-lg", data:{ animation: "animated fadeInUpBig", delay: "1.5s" } %>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div id="us-container" class="notify">
            <h1 id="us-header" class="text-center"><%= t('views.static_pages.home.sections.us.header') %></h1>
