                  <div class="col-md-4 cell-no-space">
                    <div data-animation="animated bounceInDown" data-delay="2s">
                      <%= image_tag "m-1.JPG", class: "img-responsive img-thumbnail img-center-horizontal", alt: "Services" %>
                    </div>
                  </div>
                  <div class="col-md-4 cell-no-space">
                    <div data-animation="animated bounceInDown" data-delay="2.5s">
                      <%= image_tag "m-2.JPG", class: "img-responsive img-thumbnail img-center-horizontal", alt: "Services" %>
                    </div>
                  </div>
                  <div class="col-md-4 cell-no-space">
                    <div data-animation="animated bounceInDown" data-delay="3s">
                      <%= image_tag "m-3.JPG", class: "img-responsive img-thumbnail img-center-horizontal", alt: "Services" %>
                    </div>
                  </div>
                </div>
              </div>               
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="text-center">
                <h3 id="us-text-2" style="width: 60%; margin: 0 auto; color: white;">
                  <%= t('views.static_pages.home.sections.us.text_2') %>
                </h3>
              </div>
              </div>  
            </div>
        </div>
    </div>
</div>
      
    