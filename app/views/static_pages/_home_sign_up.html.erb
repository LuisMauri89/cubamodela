<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('views.static_pages.home.sign_up_form.header') %></h3>
  </div>
  <div id="sign-up-home-page-panel-body-container" class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>

    <div class="form-group">
      <%= f.label :kind %><br />
      <%= f.select(:kind, get_kind_collection, class: "form-control") %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: t('activerecord.attributes.user.email'), class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: t('activerecord.attributes.user.password'), class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t('activerecord.attributes.user.password_confirmation'), class: "form-control" %>
    </div>

    <%= f.submit t('views.static_pages.home.sign_up_form.submit_button'), class: "btn btn-success btn-block" %>
  <% end %>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-md-offset-1 col-md-5">
        <h4><%= t('views.static_pages.home.sign_up_form.account_text') %></h4>
      </div>
      <div class="col-md-offset-1 col-md-5">
        <h4><%= t('views.static_pages.home.sign_up_form.recover_text') %></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-md-offset-2 col-md-4">
        <%= link_to t('forms.buttons.log_in'), new_session_path(resource_name), class: "btn btn-success" %><br />
      </div>
      <div class="col-md-offset-2 col-md-4">
        <%= link_to t('forms.buttons.recover'), new_password_path(resource_name), class: "btn btn-success" %><br />
      </div>
    </div>
  </div>
</div>