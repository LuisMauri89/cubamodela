<% case @photo_type %>
<% when "profile" %>
	$("#navbar-profile-photo").empty();
	$("#navbar-profile-photo").html("<%= j render 'upload_profile_photo' %>");
	$("#profile-picture-wrapper").empty();
	$("#profile-picture-wrapper").html("<%= j render 'upload' %>");
	$("#modal-container").modal("hide");
<% when "album" %>
	<% if @album.photos.count > 1 %>
		$("#body-album-<%= @album.id %>").append("<%= j render 'upload' %>");
	<% else %>
		$("#body-album-<%= @album.id %>").empty();
		$("#body-album-<%= @album.id %>").html("<%= j render 'upload' %>");
	<% end %>
<% when "casting" %>
	<% if @casting.photos.count > 1 %>
		$("#casting-photos-container").append("<%= j render 'upload' %>");
	<% else %>
		$("#casting-photos-container").empty();
		$("#casting-photos-container").html("<%= j render 'upload' %>");
	<% end %>
<% end %>