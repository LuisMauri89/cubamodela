<div class="modal-dialog">
  <div class="modal-content">
	  <div class="modal-header">
	    <h3>Upload Pictures</h3>
	  </div>
	  <div class="modal-body">
	    <%= form_for(Photo.new, url: album_photos_path(@album), html: { multipart: true, class: "dropzone"}) do |f|  %>
		  <div class="fallback">
		    <%= f.file_field :image %><br>
		    <%= f.submit "Upload Image" %>
		  </div>
		<% end %>
	  </div>
	  <div class="modal-footer">
	    <%= link_to "Close", "#", class: "btn btn-danger", data: { dismiss: "modal" } %>
	  </div>
  </div>
</div>