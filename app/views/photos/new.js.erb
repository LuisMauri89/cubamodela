Dropzone.autoDiscover = false;

$("#profile-modal").html("<%= j render 'form' %>");

var dropzone = new Dropzone (".dropzone", {
	maxFilesize: 256,
	paramName: "photo[image]",
	addRemoveLinks: false,
	acceptedFiles:'.jpg, .png, .jpeg, .gif',
	maxFiles: <%= @maxFiles.to_i %>
});

dropzone.on("success", function(file, response) {
	var uploaded_photo_url;
	if (response.photo_type == "profile"){
		uploaded_photo_url = "/albums/<%= @album.id %>/photos/" + response.photo_id + "/uploaded?type=" + response.photo_type;
	} else {
		uploaded_photo_url = "/albums/<%= @album.id %>/photos/" + response.photo_id + "/uploaded";
	}

	$.getScript(uploaded_photo_url);
});

$("#profile-modal").modal("show");
