<% if @profile.errors.any? %>
	$('#notification-messages-container').html("<%= j render 'errors' %>");
<% else %>
	$('#notification-messages-container').html("<%= j render 'action_info', message: 'views.profile_models.messages.profile_update' %>");
	$("#profile-completed-progress-container").empty();
	$("#profile-completed-progress-container").html("<%= j render 'progress_bar' %>");
	$("#navbar-option-profile").empty();
	$("#navbar-option-profile").html("<%= j render 'navbar_progress_bar' %>");
<% end %>