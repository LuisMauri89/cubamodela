<%= form_for(@profile) do |f| %>
	<div class="row">
		<div class="col-md-offset-1 col-md-2">
			<p class="text-right text-success">Profile completed [%]</p>
		</div>
		<div class="col-md-8">
			<div class="progress">
			  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="<%= @profile.profile_complete_progress_percentage %>" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: <%= @profile.profile_complete_progress_percentage %>%;">
			    <%= @profile.profile_complete_progress_percentage %>%
			  </div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-offset-4 col-md-4">
			<% if @profile.errors.any? %>
			  <div id="error_explanation">
			    <div class="alert alert-danger">
			      The form contains <%= pluralize(@profile.errors.count, "error") %>.
			    </div>
			    <ul>
			    <% @profile.errors.full_messages.each do |msg| %>
			      <li><%= msg %></li>
			    <% end %>
			    </ul>
			  </div>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-offset-1 col-md-3">
		  <ul class="nav nav-pills nav-stacked" role="tablist">
		    <li role="presentation" class="active">
		    	<a href="#personal-info" aria-controls="personal-info" role="tab" data-toggle="tab">
		    		Information
		    	</a>
		    </li>
		    <li role="presentation">
		    	<a href="#body-specs" aria-controls="body-specs" role="tab" data-toggle="tab">
		    		Sizes
	    		</a>
		    	</li>
		    <li role="presentation">
		    	<a href="#skills" aria-controls="skills" role="tab" data-toggle="tab">
		    		Skills
		    	</a>
	    	</li>
		  </ul>
		</div>
		<div class="col-md-6">
		  <div id="model-profile-fields-container" class="well">
			  <div class="tab-content">
			    <div role="tabpanel" class="tab-pane active" id="personal-info">
			    	<div class="panel panel-primary">
					  <div class="panel-heading">
					    <h3 class="panel-title">Name</h3>
					  </div>
					  <div class="panel-body">
					  	<div class="row">
							<div class="col-md-12">
								<%= f.label :gender %>
								<div class="form-group">
									<div class="row">
										<div class="col-md-3">
									    	<%= f.radio_button :gender, "Female" %>
		    								<%= f.label :gender, 'Female' %>
	    								</div>
	    								<div class="col-md-3">
									    	<%= f.radio_button :gender, "Male" %>
		    								<%= f.label :gender, 'Male' %>
	    								</div>
									</div>
							    </div>
							</div>
				    	</div>
					  	<div class="row">
							<div class="col-md-6">
							    <div class="form-group">
							      <%= f.label :first_name %><br />
							      <%= f.text_field :first_name, placeholder: "First name", class: "form-control" %>
							    </div>
					    	</div>
					    	<div class="col-md-6">
					    		<div class="form-group">
							      <%= f.label :last_name %><br />
							      <%= f.text_field :last_name, placeholder: "Last name", class: "form-control" %>
							    </div>
					    	</div>
					    </div>
					  </div>
					</div>
					<div class="panel panel-primary">
					  <div class="panel-heading">
					    <h3 class="panel-title">Contact</h3>
					  </div>
					  <div class="panel-body">
					    <div class="row">
							<div class="col-md-6">
							    <div class="form-group">
							      <%= f.label :mobile_phone %><br />
							      <%= f.text_field :mobile_phone, placeholder: "Mobile", class: "form-control" %>
							    </div>
					    	</div>
					    	<div class="col-md-6">
					    		<div class="form-group">
							      <%= f.label :land_phone %><br />
							      <%= f.text_field :land_phone, placeholder: "Land Phone", class: "form-control" %>
							    </div>
					    	</div>
					    </div>
					    <div class="form-group">
					      <%= f.label :address %><br />
					      <%= f.text_area :address, size: "60x3", placeholder: "Address", class: "form-control" %>
					    </div>
					  </div>
					</div>
					<div class="panel panel-primary">
					  <div class="panel-heading">
					    <h3 class="panel-title">Procedence</h3>
					  </div>
					  <div class="panel-body">
					    <div class="row">
							<div class="col-md-6">
								<div class="form-group">
							      <%= f.label :current_province_id %><br />
							      <%= f.select :current_province_id, Province.all.collect {|c| [ c.name, c.id ] }, class: "form-control" %>
							    </div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
							      Nacionalidad
							    </div>
							</div>
				    	</div>
					  </div>
					</div>
			    </div>
			    <div role="tabpanel" class="tab-pane" id="body-specs">
			    	<div class="panel panel-primary">
					  <div class="panel-heading">
					    <h3 class="panel-title">Body specs</h3>
					  </div>
					  <div class="panel-body">
					  	<div class="row">
							<div class="col-md-12">
								<div class="form-group">
							      <%= f.label :ayes_color_id %><br />
							      <div class="row">
								      <% Color.all.each do |color| %>
								      	<div class="col-md-2">
										    <%= f.radio_button :ayes_color_id, color.id %>
										    <%= f.label :ayes_color_id, color.name %>
									    </div>
									  <% end %>
								  </div>
							    </div>
							</div>
				    	</div>
					    <div class="row">
							<div class="col-md-2">
							    <div class="form-group">
							      <%= f.label :chest %><br />
							      <%= f.text_field :chest, placeholder: "Chest", class: "form-control" %>
							    </div>
					    	</div>
					    	<div class="col-md-2">
					    		<div class="form-group">
							      <%= f.label :waist %><br />
							      <%= f.text_field :waist, placeholder: "Waist", class: "form-control" %>
							    </div>
					    	</div>
					    	<div class="col-md-2">
					    		<div class="form-group">
							      <%= f.label :hips %><br />
							      <%= f.text_field :hips, placeholder: "Hips", class: "form-control" %>
							    </div>
					    	</div>
					    </div>
					  </div>
					</div>
					<div class="panel panel-primary">
					  <div class="panel-heading">
					    <h3 class="panel-title">Body cloth</h3>
					  </div>
					  <div class="panel-body">
					    <div class="row">
							<div class="col-md-3">
								<div class="form-group">
							      <%= f.label :size_shoes %><br />
							      <%= f.text_field :size_shoes, placeholder: "Shoes", class: "form-control" %>
							    </div>
							</div>
							<div class="col-md-3">
								<div class="form-group">
							      <%= f.label :size_cloth %><br />
							      <%= f.text_field :size_cloth, placeholder: "Dress/Suit", class: "form-control" %>
							    </div>
							</div>
				    	</div>
					  </div>
					</div>
		    	</div>
			    <div role="tabpanel" class="tab-pane" id="skills">
				    <div class="panel panel-primary">
					  <div class="panel-heading">
					    <h3 class="panel-title">Languages</h3>
					  </div>
					  <div class="panel-body">
					    <div class="row">
							<div class="col-md-12">
								<div class="form-group">
							      <%= f.label "I speak" %><br />
							      <div class="row">
								      <%= f.collection_check_boxes :language_ids, Language.all, :id, :name do |l| %>
								      	<div class="col-md-3">
										    <div class="checkbox-container">
										      <%= l.check_box %>
										      <%= l.label %>
										    </div>
									    </div>
									  <% end %>
							       </div>
							    </div>
							</div>
				    	</div>
					  </div>
					</div>
					<div class="panel panel-primary">
					  <div class="panel-heading">
					    <h3 class="panel-title">Aptitudes</h3>
					  </div>
					  <div class="panel-body">
					    <div class="row">
							<div class="col-md-12">
								<div class="form-group">
							      <%= f.label "I can" %><br />
							      <div class="row">
								      <%= f.collection_check_boxes :expertise_ids, Expertise.all, :id, :name do |e| %>
								      	<div class="col-md-3">
										    <div class="checkbox-container">
										      <%= e.check_box %>
										      <%= e.label %>
										    </div>
										</div>
									  <% end %>
								  </div>
							    </div>
							</div>
				    	</div>
					  </div>
					</div>
			    </div>
			  </div>
		  </div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-offset-1 col-md-9">
			<%= f.submit "Save all", class: "btn btn-success btn-lg pull-right" %>
		</div>
	</div>
<% end %>