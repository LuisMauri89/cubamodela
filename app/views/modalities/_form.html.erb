<div class="form-wrapper-large form-border">

  <%= form_for(modality, html: { class: "form-horizontal" }) do |f| %>
    
    <% if modality.errors.any? %>
      <div class="alert alert-danger text-center">
        <%= t('forms.errors.header_text') %> <%= t('forms.errors.count', count: modality.errors.count) %>.
        <ul>
        <% modality.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group text-center">
      <%= f.label :name_en %>
      <%= f.text_field :name_en, placeholder: t('activerecord.attributes.modality.name_en'), class: "form-control" %>
    </div>

    <div class="form-group text-center">
      <%= f.label :name_es %>
      <%= f.text_field :name_es, placeholder: t('activerecord.attributes.modality.name_es'), class: "form-control" %>
    </div>

    <div class="form-group text-center">
      <%= f.label :profile_type %>
      <%= f.text_field :profile_type, placeholder: t('activerecord.attributes.modality.profile_type'), class: "form-control" %>
    </div>

    <%= f.submit t('forms.buttons.save'), class: "btn btn-primary btn-block" %>
  <% end %>

</div>
