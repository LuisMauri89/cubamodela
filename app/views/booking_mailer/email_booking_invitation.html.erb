<h1 class="header text-center text-white"><%= t('views.mailers.global.user_friendly') %> <%= @profile.get_first_name %></h1>
<h2><%= t('views.messages.index.templates.booking_invitation.header_text') %></h2>

<h4><%= t('activerecord.attributes.booking.description') %></h4>
<p><%= @booking.description %></p>

<p><%= t('views.messages.index.templates.booking_invitation.after_description_text') %></p>

<p><%= t('activerecord.attributes.booking.casting_date') %>: <%= l(@booking.casting_date, format: :custom) %> [ <%= distance_of_time_in_words(Date.today, @booking.casting_date.to_date) << t('datetime.distance_in_words.after_text') %> ]</p>
<p><%= t('activerecord.attributes.booking.shooting_date') %>: <%= l(@booking.shooting_date, format: :custom) %> [ <%= distance_of_time_in_words(Date.today, @booking.shooting_date.to_date) << t('datetime.distance_in_words.after_text') %> ]</p>

<p><%= t('views.messages.index.templates.booking_invitation.after_dates_text') %></p>

<%= link_to t('views.messages.index.templates.booking_invitation.buttons.see_booking'), booking_url(@booking), class: "btn" %>

<div class="clear"></div>

<p><%= t('views.mailers.global.mail_footer') %></p>