<% if @coupon_charged %>
	$('#notification-messages-container').html("<%= j render 'shared/action_info', message: 'views.coupons.form.messages.cupon_success_charge' %>");
	$('#wallet-amount').empty();
	$('#wallet-amount').html("<%= @coupon_amount %>");
<% else %>
	$('#notification-messages-container').html("<%= j render 'shared/error_info', message: 'views.coupons.form.messages.cupon_failed_charge' %>");
<% end %>