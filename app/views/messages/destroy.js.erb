<% if @message.errors.any? %>
	$('#notification-messages-container').html("<%= j render 'errors' %>");
<% else %>
	$('#notification-messages-container').html("<%= j render 'action_info' %>");
	$('#message-<%= @message.id %>').parent().remove();
	$('#current-message-container').empty();
	$('#current-message-container').html("<%= j render 'current_message' %>");
	<% if @messages_count == 0 %>
		$("#inbox-actions-container a").addClass("disabled")
	<% end %>
<% end %>
