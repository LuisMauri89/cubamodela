<% if @message.errors.any? %>
	$('#model-info-container').html("<%= j render 'errors' %>");
<% else %>
	$('#model-info-container').html("<%= j render 'action_info' %>");
	$('#message-<%= @message.id %>').parent().remove();
	$('#current-message-container').empty();
	$('#current-message-container').html("<%= j render 'no_messages' %>");
<% end %>
