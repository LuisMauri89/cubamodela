<div class="row bg-primary message-section">
	<div class="col-md-11">
		<div class="text-center">
			<h2><%= t('views.messages.index.templates.casting_change_fields_only.header_text') %></h2>
			<div class="translated-text">
				<% if @message.asociateable.title_en.present? %>
					<p class="title"><%= @message.asociateable.title_en.upcase %></p>
					<footer>
						<%= @message.asociateable.title_es %>
					</footer>
				<% else %>
					<p class="title"><%= @message.asociateable.title_es.upcase %></p>
					<footer>
						<%= @message.asociateable.title_en %>
					</footer>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-md-1">
		<div class="text-center">
			<%= button_to(message_path(@message), method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "btn btn-danger pull-right") do %>
			  <span><%= t('forms.buttons.delete') %></span>
			<% end %>
		</div>
	</div>
</div>

<div class="row message-section">
	<div class="col-md-12">
		<div class="text-justify">
			<h4><%= t('activerecord.attributes.casting.description') %></h4>
			<div class="translated-text">
				<% if @message.asociateable.description_en.present? %>
					<p><%= @message.asociateable.description_en %></p>
					<footer>
						<%= @message.asociateable.description_es %>
					</footer>
				<% else %>
					<p class="title"><%= @message.asociateable.description_es %></p>
					<footer>
						<%= @message.asociateable.description_en %>
					</footer>
				<% end %>
			</div>
		</div>
	</div>
</div>

<div class="row message-section">
	<div class="col-md-12">
		<div class="text-justify">
			<p><%= t('views.messages.index.templates.casting_change_fields_only.after_description_text') %></p>
		</div>
	</div>
</div>

<% if @message.asociateable.shooting_date.to_date > Date.today %>
	<div class="row message-section">
		<div class="col-md-12">
			<div class="text-left">
				<% if @message.asociateable.expiration_date > Date.today %>
					<p><%= t('activerecord.attributes.casting.expiration_date') %>: <%= l(@message.asociateable.expiration_date, format: :custom) %> [ <%= distance_of_time_in_words(@message.asociateable.expiration_date, Date.today) << t('datetime.distance_in_words.after_text') %> ]</p>
				<% end %>

				<% if @message.asociateable.casting_date > Date.today %>
					<p><%= t('activerecord.attributes.casting.casting_date') %>: <%= l(@message.asociateable.casting_date, format: :custom) %> [ <%= distance_of_time_in_words(@message.asociateable.casting_date, DateTime.now) << t('datetime.distance_in_words.after_text') %> ]</p>
				<% end %>

				<p><%= t('activerecord.attributes.casting.shooting_date') %>: <%= l(@message.asociateable.shooting_date, format: :custom) %> [ <%= distance_of_time_in_words(@message.asociateable.shooting_date, DateTime.now) << t('datetime.distance_in_words.after_text') %> ]</p>
			</div>
		</div>
	</div>
<% end %>

<div class="row message-section">
	<div class="col-md-12">
		<div class="text-center">
			<p><%= t('views.messages.index.templates.casting_change_fields_only.after_dates_text') %></p>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<% if @message.asociateable.expiration_date.to_date > Date.today %>
			<% @status = Intent.get_status_by_model_and_casting(@message.ownerable, @message.asociateable) %>
			<% if @status == "invited" %>
				<%= link_to t('views.messages.index.templates.casting_change_fields_only.buttons.confirm'),confirm_casting_path(@message.asociateable, @message.ownerable, from: "model_inbox"), remote: true, class: "btn btn-primary pull-right btn-small-right-margin", id: "btn-confirm-" << @message.asociateable.id.to_s << @message.ownerable.id.to_s %>
			<% elsif !(@status == "confirmed") %>
				<%= link_to t('views.messages.index.templates.casting_change_fields_only.buttons.apply'),apply_casting_path(@message.asociateable, @message.ownerable), remote: true, class: "btn btn-primary pull-right btn-small-right-margin", id: "btn-apply-" << @message.asociateable.id.to_s << @message.ownerable.id.to_s %>
			<% end %>
		<% end %>
		<%= link_to t('views.messages.index.templates.casting_change_fields_only.buttons.see_casting'), casting_path(@message.asociateable), class: "btn btn-primary pull-right btn-small-right-margin" %>
	</div>
</div>