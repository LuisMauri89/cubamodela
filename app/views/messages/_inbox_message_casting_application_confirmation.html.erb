<div class="row bg-primary message-section">
	<div class="col-md-11">
		<div class="text-center">
			<h2><%= t('views.messages.index.templates.casting_application_confirmation.header_text', value: @message.ownerable.get_first_name) %></h2>
			<h3><%= t('views.messages.index.templates.casting_application_confirmation.subheader_text', value: @message.asociateable.title) %></h3>
		</div>
	</div>
	<div class="col-md-1">
		<div class="text-center">
			<%= button_to(message_path(@message), method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "pull-right") do %>
			  <span class="glyphicon glyphicon-trash glyphicon-trash-blue" aria-hidden="true"></span>
			<% end %>
		</div>
	</div>
</div>

<div class="row message-section">
	<div class="col-md-12">
		<div class="text-justify">
			<h4><%= t('activerecord.attributes.casting.description') %></h4>
			<p><%= @message.asociateable.description %></p>
		</div>
	</div>
</div>

<div class="row message-section">
	<div class="col-md-12">
		<div class="text-justify">
			<p><%= t('views.messages.index.templates.casting_application_confirmation.after_description_text') %></p>
		</div>
	</div>
</div>

<div class="row message-section">
	<div class="col-md-12">
		<div class="text-left">
			<p><%= t('activerecord.attributes.casting.expiration_date') %>: <%= l(@message.asociateable.expiration_date, format: :custom) %> [ <%= distance_of_time_in_words(Date.today, @message.asociateable.expiration_date) << t('datetime.distance_in_words.after_text') %> ]</p>
			<p><%= t('activerecord.attributes.casting.casting_date') %>: <%= l(@message.asociateable.casting_date, format: :custom) %> [ <%= distance_of_time_in_words(Date.today, @message.asociateable.casting_date) << t('datetime.distance_in_words.after_text') %> ]</p>
			<p><%= t('activerecord.attributes.casting.shooting_date') %>: <%= l(@message.asociateable.shooting_date, format: :custom) %> [ <%= distance_of_time_in_words(Date.today, @message.asociateable.shooting_date) << t('datetime.distance_in_words.after_text') %> ]</p>
		</div>
	</div>
</div>

<div class="row message-section">
	<div class="col-md-12">
		<div class="text-center">
			<p><%= t('views.messages.index.templates.casting_application_confirmation.after_dates_text') %></p>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<%= link_to t('views.messages.index.templates.casting_application_confirmation.buttons.see_casting'), casting_path(@message.asociateable), class: "btn btn-primary pull-right btn-small-right-margin" %>
	</div>
</div>