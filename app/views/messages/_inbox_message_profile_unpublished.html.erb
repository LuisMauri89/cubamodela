<div class="row bg-primary message-section">
	<div class="col-md-11">
		<div class="text-center">
			<h2><%= t('views.messages.index.templates.profile_unpublished.header_text') %></h2>
		</div>
	</div>
	<div class="col-md-1">
		<div class="text-center">
			<%= button_to(message_path(@message), method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "btn btn-danger pull-right") do %>
			  <span><%= t('forms.buttons.delete') %></span>
			<% end %>
		</div>
	</div>
</div>

<div class="row message-section">
	<div class="col-md-12">
		<div class="text-center">
			<p><%= t('views.messages.index.templates.profile_unpublished.argument_text') %></p>
		</div>
	</div>
</div>

<div class="row message-section">
	<div class="col-md-12">
		<div class="text-justify">
			<p><%= t('views.messages.index.templates.profile_unpublished.list_header_text') %></p>
			<ul>
				<li><%= t('views.messages.index.templates.profile_unpublished.list_item_1_text') %></li>
				<li><%= t('views.messages.index.templates.profile_unpublished.list_item_2_text') %></li>
				<li><%= t('views.messages.index.templates.profile_unpublished.list_item_3_text') %></li>
				<li><%= t('views.messages.index.templates.profile_unpublished.list_item_4_text') %></li>
				<li><%= t('views.messages.index.templates.profile_unpublished.list_item_5_text') %></li>
			</ul>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<%= link_to t('views.messages.index.templates.profile_published.buttons.edit_profile'), edit_profile_model_path(@message.ownerable), class: "btn btn-primary pull-right btn-small-right-margin" %>
		<%= link_to t('views.messages.index.templates.profile_unpublished.buttons.profile_example'), static_pages_profile_example_path, class: "btn btn-primary pull-right btn-small-right-margin" %>
	</div>
</div>