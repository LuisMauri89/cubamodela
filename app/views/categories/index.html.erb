<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default panel-table">
      <div class="panel-heading">
        <h1 class="panel-title text-center"><%= t('views.categories.index.header_text') %></h1>
      </div>
      <div class="panel-body panel-body-table">
        <table class="table">
          <thead class="bg-info">
            <tr>
              <th><%= t('activerecord.attributes.category.name_en') %></th>
              <th><%= t('activerecord.attributes.category.name_es') %></th>
              <th class="text-center"><%= t('table.actions') %></th>
            </tr>
          </thead>

          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><h4><%= category.name_en %></h4></td>
                <td><h4><%= category.name_es %></h4></td>
                <td>
                  <%= link_to t('forms.buttons.delete'), category, method: :delete, class: "btn btn-primary pull-right btn-small-right-margin", data: { confirm: 'Are you sure?' } %>
                  <%= link_to t('forms.buttons.edit'), edit_category_path(category), class: "btn btn-primary pull-right btn-small-right-margin" %>
                  <%= link_to t('forms.buttons.show'), category, class: "btn btn-primary pull-right btn-small-right-margin" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to t('forms.buttons.new'), new_category_path, class: "btn btn-primary" %>
        <%= link_to t('forms.buttons.control_panel'), control_panel_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

