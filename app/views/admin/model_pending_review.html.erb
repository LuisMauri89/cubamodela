<div class="row">
  <div class="col-md-12">
    <div class="panel panel-primary panel-nomenclator">
      <div class="panel-heading">
        <h1 class="panel-title text-center">Models pending review</h1>
      </div>
      <div class="panel-body panel-body-nomenclator">
        <table class="table">
          <thead class="bg-info">
            <tr>
              <th class="text-center">Model</th>
              <th class="text-center">Email</th>
              <th class="text-center">Created at</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @models.each do |model| %>
              <tr>
                <td>
                  <%= image_tag model.nil? ? "missing_profile_picture.jpg" : model.get_profile_picture_url(:user), alt: "Model Photo", class: "img-rounded pull-left" %>
                  <h4 class="pull-left" style="margin-left:10px;"><%= model.full_name  %></h4>
                </td>
                <td class="text-center"><h4><%= model.user.email %></h4></td>
                <td class="text-center"><h4><%= model.created_at %></h4></td>
                <td>
                  <%= link_to 'Edit', show_for_review_profile_model_path(model), class: "btn btn-primary btn-sm btn-small-right-margin pull-right" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>
        <%= link_to 'Control Panel', control_panel_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>