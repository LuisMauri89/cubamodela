<div id="form-casting-container">
  <%= form_for(@booking, html: { class: "form-horizontal" }) do |f| %>

    <% if @booking.errors.any? %>
      <div class="alert alert-danger text-center">
        The form contains <%= pluralize(@booking.errors.count, "error") %>.
        <ul>
        <% @booking.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group text-center">
      <%= f.label :description %>
      <%= f.text_area :description, size: "60x5", placeholder: "Description", class: "form-control text-center" %>
    </div>

    <div class="form-group text-center">
      <%= f.label :location %>
      <%= f.text_area :location, size: "60x4", placeholder: "Location", class: "form-control text-center" %>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group text-center">
          <%= f.label :casting_date %> <br/>
          <%= date_select :booking, :casting_date, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group text-center">
          <%= f.label :shooting_date %> <br/>
          <%= date_select :booking, :shooting_date, class: "form-control" %>
        </div>
      </div>
    </div>

    <%= f.hidden_field :profile_model_id, value: @profile.id %>
    <%= f.submit "Save Booking", class: "btn btn-primary btn-block" %>
  <% end %>
</div>