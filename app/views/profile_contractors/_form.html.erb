<div id="profile-model-fields-container">
  <%= form_for(@profile, remote: true, html: { class: "form-remote-spinner" }) do |f| %>
	<div class="row">
		<div class="col-md-12">
			<%= f.submit t('forms.buttons.save_resource', resource: "Profile"), class: "btn btn-primary btn-block btn-ms show-spinner" %><br />
		</div>
	</div>
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title"><%= t('views.profile_contractors.edit.form_sections.name') %></h3>
	  </div>
	  <div class="panel-body">
	  	<div class="row">
			<div class="col-md-6">
			    <div class="form-group text-center">
			      <%= f.label :first_name %><br />
			      <%= f.text_field :first_name, placeholder: "First name", class: "form-control text-center" %>
			    </div>
	    	</div>
	    	<div class="col-md-6">
	    		<div class="form-group text-center">
			      <%= f.label :last_name %><br />
			      <%= f.text_field :last_name, placeholder: "Last name", class: "form-control text-center" %>
			    </div>
	    	</div>
	    </div>
	  </div>
	</div>
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title"><%= t('views.profile_contractors.edit.form_sections.contact') %></h3>
	  </div>
	  <div class="panel-body">
	    <div class="row">
			<div class="col-md-3">
			    <div class="form-group text-center">
			      <%= f.label :mobile_phone %><br />
			      <%= f.text_field :mobile_phone, placeholder: "Mobile", class: "form-control text-center" %>
			    </div>
	    	</div>
	    	<div class="col-md-3">
	    		<div class="form-group text-center">
			      <%= f.label :land_phone %><br />
			      <%= f.text_field :land_phone, placeholder: "Land Phone", class: "form-control text-center" %>
			    </div>
	    	</div>
	    	<div class="col-md-3">
	    		<div class="form-group text-center">
			      <%= f.label :address %><br />
			      <%= f.text_area :address, size: "60x3", placeholder: "Address", class: "form-control text-center" %>
			    </div>
	    	</div>
	    	<div class="col-md-3">
	    		<div class="form-group text-center">
			      <%= f.label :represent %><br />
			      <%= f.text_area :represent, size: "60x3", placeholder: "Represent", class: "form-control text-center" %>
			    </div>
	    	</div>
	    </div>
	  </div>
	</div>
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title"><%= t('views.profile_contractors.edit.form_sections.procedence') %></h3>
	  </div>
	  <div class="panel-body">
	    <div class="row">
			<div class="col-md-3">
				<div class="form-group text-center">
			      <%= f.label :nationality_id %><br />
			      <%= f.select :nationality_id, Nationality.all.collect {|n| [ n.name_es, n.id ] }, class: "form-control" %>
			    </div>
			</div>
		</div>
	  </div>
	</div>
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title"><%= t('views.profile_contractors.edit.form_sections.aptitudes') %></h3>
	  </div>
	  <div class="panel-body">
	  	<div class="row">
			<div class="col-md-2 col-md-offset-1">
	  			<div class="form-group">
			      <%= f.label t('activerecord.attributes.profile_model.associations.languages') << ":" %><br />
			      <% if I18n.locale == "en".to_sym %>
				  	<%= f.collection_check_boxes :language_ids, Language.all.order("name_en ASC"), :id, :name_en do |l| %>
					    <div class="checkbox-container">
					      <%= l.check_box %>
					      <%= l.label %>
					    </div>
					<% end %>	
				  <% else %>
				    <%= f.collection_check_boxes :language_ids, Language.all.order("name_en ASC"), :id, :name_es do |l| %>
					    <div class="checkbox-container">
					      <%= l.check_box %>
					      <%= l.label %>
					    </div>
					<% end %>
				  <% end %>
			    </div>
	  		</div>
		</div>
	  </div>
	</div>
  <% end %>
</div>