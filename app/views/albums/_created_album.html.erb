<div id="panel-<%= @album.id %>" class="panel panel-primary">
  <div class="panel-heading">
  	<div class="row">
		<div class="col-md-10">
			<div id="form-edit-album-<%= @album.id %>-container">
		  	</div>
		    <h3 id="title-<%= @album.id %>" class="panel-title"><%= @album.name %></h3>
		</div>
		<div class="col-md-2">
			<%= link_to t('forms.buttons.upload'), new_album_photo_path(@album, type: "album"), remote: true, class: "btn btn-primary btn-xs pull-right" %>
    		<%= link_to t('forms.buttons.delete'), delete_album_path(@album), remote: true, class: "btn btn-primary btn-xs pull-right" %>
    		<%= link_to t('forms.buttons.edit'), edit_album_path(@album), remote: true, class: "btn btn-primary btn-xs pull-right" %>
		</div>
	</div>
  </div>
  <div class="panel-body">
    <div class="row">
		<div class="col-md-12">
			<div id="body-album-<%= @album.id %>" class="profile-album-photos-container">
				<h4 class="pull-left" style="margin-right: 30px;">
					<%= t('views.albums.global.empty_album') %>
				</h4>
				<%= link_to t('forms.buttons.upload'), new_album_photo_path(@album, type: "album"), remote: true, class: "btn btn-primary" %>
			</div>
		</div>
	</div>
  </div>
</div>