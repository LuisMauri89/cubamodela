<% if @album.errors.any? %>
  <div class="alert alert-danger alert-messages-box">
    <%= t('forms.errors.header_text') %> <%= pluralize(@album.errors.count, "error") %>.
    <ul>
    <% @album.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>