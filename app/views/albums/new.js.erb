$('#new-album-link').hide();
$('#form-new-album-container').html("<%= j render 'form' %>");
$('#new_album').append("<%= j render 'cancel_form', edit: false %>");
$('#btn-cancel-new-album').click(function(){
	$("#model-info-container").hide();
	$('#form-new-album-container').empty();
	$('#new-album-link').show();
});