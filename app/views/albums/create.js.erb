<% if @album.errors.any? %>
	$('#notification-messages-container').html("<%= j render 'errors' %>");
<% else %>
	$('#form-new-album-container').empty()
	$('#new-album-link').show();
	$('#albums-container').append("<%= j render 'created_album' %>")
	$('#notification-messages-container').html("<%= j render 'action_info', message: 'views.albums.messages.create' %>");
<% end %>