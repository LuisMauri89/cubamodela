<% if @album.errors.any? %>
	$('#notification-messages-container').html("<%= j render 'errors' %>");
<% else %>
	$('#form-edit-album-<%= @album.id %>-container').empty();
	$('#title-<%= @album.id %>').text('<%= @album.name %>');
	$('#title-<%= @album.id %>').show();
	$('#panel-<%= @album.id %> a').show();
	$('#notification-messages-container').html("<%= j render 'action_info', message: 'views.albums.messages.update' %>");
<% end %>