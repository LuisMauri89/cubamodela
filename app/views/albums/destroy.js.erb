<% if @album.errors.any? %>
	$('#notification-messages-container').html("<%= j render 'errors' %>");
<% else %>
	$('#panel-<%= @album.id %>').remove();
	$('#notification-messages-container').html("<%= j render 'action_info', message: 'views.albums.messages.destroy' %>");
<% end %>
$("#modal-container").modal("hide");