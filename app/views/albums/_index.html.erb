<div id="profile-model-albums-container" class="well">
	<div class="row">
		<div class="col-md-12">
			<div id="form-new-album-container"></div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<%= link_to 'New Album', new_album_path, remote: true, id: "new-album-link", class: "btn btn-success btn-block btn-ms" %><br />
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div id="albums-container">
				<% @albums.each do |album| %>
					<div id="panel-<%= album.id %>" class="panel panel-primary">
					  <div class="panel-heading">
					  	<div class="row">
							<div class="col-md-8">
								<div id="form-edit-album-<%= album.id %>-container">
							  	</div>
							    <h3 id="title-<%= album.id %>" class="panel-title"><%= album.name %></h3>
							</div>
							<div class="col-md-4">
					    		<%= link_to 'Delete', album_path(album), method: :delete, remote: true, class: "btn btn-danger btn-xs pull-right" %>
					    		<%= link_to 'Edit', edit_album_path(album), remote: true, class: "btn btn-success btn-xs pull-right" %>
							</div>
						</div>
					  </div>
					  <div class="panel-body">
					    <div class="row">
							<div class="col-md-12">
								<div class="pictures-container">
									Add Pics
								</div>
							</div>
						</div>
					  </div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>