<% if @study.errors.any? %>
	$('#notification-messages-container').html("<%= j render 'errors' %>");
<% else %>
	$('#form-edit-study-<%= @study.id %>').empty();
	$('#study-title-<%= @study.id %>').text('<%= @study.title %>');
	$('#study-place-<%= @study.id %>').text('<%= @study.place %>');
	$('#study-desc-<%= @study.id %>').text('<%= @study.description %>');
	$('.row-study-<%= @study.id %>').show();
	$('#notification-messages-container').html("<%= j render 'action_info', message: 'views.studies.messages.update' %>");
<% end %>