<% if @study.errors.any? %>
	$('#notification-messages-container').html("<%= j render 'errors' %>");
<% else %>
	$('#form-new-study-container').empty()
	$('#new-study-link').show();
	$('#studies-container').append("<%= j render 'created_study' %>")
	$('#notification-messages-container').html("<%= j render 'action_info', message: 'views.studies.messages.create' %>");
<% end %>