<div class="row">
  <div class="col-md-12">
  	<div class="container-center-horizontal-medium">

  		<div class="panel panel-default">
	      <div class="panel-heading">
	        <h3 class="panel-title text-center"><%= t('views.studies.show.header_text') %></h3>
	      </div>
	      <div class="panel-body">
	      	<div class="row">
	      		<div class="col-md-3">
	      			<%= image_tag @study.ownerable.nil? ? "missing_profile_picture.jpg" : @study.ownerable.get_profile_picture_url(:profile), alt: "Model Photo", class: "img-responsive" %>
	      		</div>
	      		<div class="col-md-9">
	      			<h3><b><%= t('activerecord.attributes.study.title') %>:</b> <%= @study.title %></h3>
			        <h3><b><%= t('activerecord.attributes.study.place') %>:</b> <%= @study.place %></h3>
			        <h3><b><%= t('activerecord.attributes.study.description') %>:</b> <%= @study.description %></h3>
	      		</div>
	      	</div>
	      </div>
	    </div>

	    <br/>

		<%= link_to t('forms.buttons.back'), request.referrer, class: "btn btn-primary pull-right btn-small-right-margin" %>
		<div class="clearfix">...</div>
  	</div>
  </div>
</div>
